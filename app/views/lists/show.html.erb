<p style="color: green"><%= notice %></p>

<div class="lists-all">
  <table class="box">
    <thead>
      <tr>
        <th scope="col">List</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @list.name %></td>
      </tr>
    </tbody>
  </table>
   
  <div class="button-options">
    <%= link_to "Edit list", edit_list_path(@list) %> |
    <%= link_to "Access to products", list_products_path(@list) %> |
    <%= link_to "Back to lists", lists_path(@list) %>
    <%= button_to "Destroy this list", [@list], method: :delete %>
  </div>
</div>
